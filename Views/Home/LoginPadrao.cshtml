@model LoginModel

@{
    // para layout não ficar em loop infinito
    Layout = null;
}


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
      asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
      asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />

<link href="~/css/site.css" rel="stylesheet" />

<style type="text/css">

    .login-form {
        width: 450px;
        margin: 30px auto;
    }

        .login-form form {
            margin-bottom: 15px;
            background: #ffffff;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .login-form h2 {
            margin-bottom: 30px;
            font-weight: 800;
            font-size: 30px;
            color: #DE6262;
        }

    div.container5 {
        height: 10em;
        display: flex;
        align-items: center
    }

        div.container5 p {
            margin: 0
        }

    .form-control, .login-btn {
        min-height: 38px;
        border-radius: 2px;
    }

    .input-group-addon .fa {
        font-size: 18px;
    }

    .login-btn {
        font-size: 15px;
        font-weight: bold;
    }

    .social-btn .btn {
        border: none;
        margin: 10px 3px 0;
        opacity: 1;
    }

        .social-btn .btn:hover {
            opacity: 0.9;
        }

    .social-btn .btn-primary {
        background: #507cc0;
    }

    .social-btn .btn-info {
        background: #64ccf1;
    }

    .social-btn .btn-danger {
        background: #df4930;
    }

    .or-seperator {
        margin-top: 20px;
        text-align: center;
        border-top: 1px solid #ccc;
    }

        .or-seperator i {
            padding: 0 10px;
            background: #f7f7f7;
            position: relative;
            top: -11px;
            z-index: 1;
        }

    IMG.displayed {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>

<div class="container">

    <div class="container">

        <div class="row">

            <div class="login-form col-md-8 login-form">

                <form asp-controller="Home" asp-action="Login" method="post">

                    <a href="http://www.htsinformatica.com.br" target="_blank">
                        <IMG class="displayed" src="~/images/logohts.jpg" alt=”” width=250 height=200>
                    </a>

                    <h2 class="text-center">Horus-I Erp</h2>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input type="text" class="form-control" asp-for="Usuario" placeholder="Usuario" autofocus>
                        </div>
                        <span asp-validation-for="Usuario" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            <input type="password" class="form-control" asp-for="Senha" placeholder="Senha">
                        </div>
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary login-btn btn-block">Entrar</button>
                    </div>

                </form>
            </div>



        </div>

    </div>

</div>
